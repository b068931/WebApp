@model WebApp.ViewModels.Product.ProductShow

<form action="/products/action/delete" method="post">
	@Html.AntiForgeryToken()
	<input type="hidden" value="@Model.Id" name="id" />
	<input type="submit" class="btn btn-danger" value="delete" />
</form>

<form action="/products/action/update" method="get">
	<input type="hidden" value="@Model.Id" name="id" />
	<input type="submit" class="btn btn-warning" value="update" />
</form>

<form action="/products/images/action/update" method="get">
	<input type="hidden" value="@Model.Id" name="id" />
	<input type="submit" class="btn btn-warning" value="update images" />
</form>

<br />

<div class="d-flex w-50">
	<div class="align-self-center">
		<div class="d-flex justify-content-center align-content-center flex-column p-1" style="max-width:125px;">
			@foreach(var imageId in Model.ProductImagesIds)
			{
				<img tabindex="0" width="40" height="40" src="/images/image/@imageId" class="border border-1 p-1 min-image m-2" role="button"/>
			}
		</div>
	</div>
	<div class="flex-fill align-self-center">
		<div class="col d-flex border-start border-end">
			<div id="shownImageScrollContainer" class="my-2 mx-auto" style="max-width:470px;max-height:420px;">
				<img id="shownImage" width="450" height="300" src="/images/image/@Model.MainImageId" style="cursor:zoom-in;"/>
			</div>
		</div>
	</div>
</div>

<br />

<p>Name: @Model.Name</p>
<p>Description: @Model.Description</p>
<p>Price: @Model.Price</p>
<p>Discount: @Model.Discount</p>
<p>Viewscount: @Model.ViewsCount</p>
<p>Stars count: @Model.Rating</p>
<p>Ratings count: @Model.ReviewsCount</p>
<p>My brand name: @(
	(Model.BrandName != null) ? Model.BrandName : ""
)</p>

@section scripts {
	<script type="text/javascript" src="~/js/productShow.js"></script>
}