@model WebApp.ViewModels.Auth.ForgotPasswordVM
@{
	ViewBag.RenderHeader = false;
	ViewBag.RenderFooter = false;
}

<div class="d-flex" style="line-height:0.8;">
	<img src="/resources/womanongrass.png" class="h-100" style="width:37.5%;" />
	<div class="d-flex flex-column flex-fill">
		<img src="/resources/brandbig.svg" class="mx-auto mt-auto" style="width:180px;height:133px;" />
		<span class="mx-auto" style="color:rgba(33, 37, 23, 1);">Відновлення пароля</span>
		<div class="d-flex my-4 mx-auto">
			@if (Model.ReturnUrl != null)
			{
				<a href="/auth/login?return=@Model.ReturnUrl" class="prevent-select link_color me-4">
					<h4>Назад до сторінки входу</h4>
				</a>
			}
			else
			{
				<a href="/auth/login" class="prevent-select link_color me-4">
					<h4>Назад до сторінки входу</h4>
				</a>
			}
		</div>
		<form method="post" action="/auth/reset/password" class="d-flex flex-column pb-3 mb-auto mx-auto styled-inputs">
			@Html.AntiForgeryToken()
			@if (Model.ReturnUrl != null)
			{
				<input type="hidden" asp-for=ReturnUrl />
			}
			<div class="d-flex flex-column">
				<div class="d-flex">
					<label for="emailinput" class="me-auto pe-3 my-auto">
						Пошта існуючого акаунта
					</label>
					<input id="emailinput" asp-for=Email placeholder="Введіть вашу пошту" class="form-control" style="width:20rem;height:3rem;" />
				</div>
				<span class="text-danger mt-1" asp-validation-for=Email></span>
			</div>
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<button type="submit" class=" mt-5 btn btn-outline-dark" style="border-radius:1.1rem;">Відправити</button>
		</form>
	</div>
</div>