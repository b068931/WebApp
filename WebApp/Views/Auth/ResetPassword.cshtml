@model WebApp.ViewModels.Auth.PasswordResetFinishVM
@{
	ViewBag.RenderHeader = false;
	ViewBag.RenderFooter = false;
}

<div class="d-flex" style="line-height:0.8;">
	<img src="/resources/womanongrass.png" class="h-100" style="width:37.5%;" />
	<div class="d-flex flex-column flex-fill">
		<img src="/resources/brandbig.svg" class="mx-auto mt-auto" style="width:180px;height:133px;" />
		<span class="mx-auto" style="color:rgba(33, 37, 23, 1);">Створення нового пароля</span>
		<form method="post" action="/auth/reset/newpassword" class="d-flex flex-column pb-3 px-3 mb-auto mx-auto styled-inputs">
			@Html.AntiForgeryToken()
			@if (Model.ReturnUrl != null)
			{
				<input type="hidden" asp-for=ReturnUrl />
			}
			<input type="hidden" asp-for=UserId />
			<input type="hidden" asp-for=Token />
			<div class="d-flex flex-column">
				<div class="d-flex mt-3">
					<label for="passwordinput" class="me-auto pe-3 my-auto">
						Пароль
					</label>
					<input id="passwordinput" asp-for=Password placeholder="Введіть пароль" class="form-control" style="width:20rem;height:3rem;" />
				</div>
				<span class="text-danger mt-1" asp-validation-for=Password></span>
			</div>
			<div class="d-flex flex-column">
				<div class="d-flex mt-3">
					<label for="passwordinputrepeat" class="me-auto pe-3 my-auto">
						Підтвердження
					</label>
					<input id="passwordinputrepeat" asp-for=PasswordRepeat placeholder="Повторіть пароль ще раз" class="form-control" style="width:20rem;height:3rem;" />
				</div>
				<span class="text-danger mt-1" asp-validation-for=PasswordRepeat></span>
			</div>
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<button type="submit" class=" mt-5 btn btn-outline-dark" style="border-radius:1.1rem;">Змінити пароль</button>
		</form>
	</div>
</div>