@model WebApp.ViewModels.Account.AccountPageVM

<div class="d-flex flex-row justify-content-between m-3">
	<div>
		<h4>Особиста інформація</h4>
		<div class="lh-1">
			<div class="ms-2"><span class="fw-bold">Ім'я: </span>@Model.Name</div>
			<div class="ms-2"><span class="fw-bold">Електронна пошта: </span>@Model.Email</div>
			<div class="ms-2"><span class="fw-bold">Дата створення акаунта: </span>@Model.CreationDateString</div>
		</div>

		<h4 class="mt-5">Останні переглянуті товари за 24 години</h4>
		<div class="d-flex flex-row justify-content-center flex-wrap">
			<partial name="~/Views/Products/_ProductSearchPreview.cshtml" model="Model.RecentlyViewedProducts"/>
		</div>
	</div>
	<div class="lh-sm prevent-select">
		<p class="text-muted">Сторінка мого акаунта</p>
		<p>
			<a href="/account/products" class="link_color">Мої продукти</a>
		</p>
		<p>
			<a href="/account/settings" class="link_color">Налаштування</a>
		</p>
	</div>
</div>